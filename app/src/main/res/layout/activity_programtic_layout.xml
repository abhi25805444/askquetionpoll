<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/mainrev"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/lin" />

            <RelativeLayout
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="@color/white">


                <RelativeLayout
                    android:id="@+id/rev1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/txtHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="5dp"
                        android:text="Height: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editHeight"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txtHeight"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/txtWidth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@id/editWidth"
                        android:text="Width: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editWidth"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:inputType="number" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rev2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rev1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:id="@+id/txtX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="5dp"
                        android:text="X: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editX"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txtX"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/txtY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@id/editY"
                        android:text="Y: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editY"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:inputType="number" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rev3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rev2"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:id="@+id/txtPadding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="5dp"
                        android:text="Padding: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editPadding"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txtPadding"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/txtMargin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@id/editMargin"
                        android:text="Margin: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editMargin"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:inputType="number" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rev4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rev3"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/txtRotation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="5dp"
                        android:text="Rotation: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editRotation"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txtRotation"
                        android:inputType="number"
                        app:autoSizeMaxTextSize="25sp"
                        app:autoSizeMinTextSize="5sp"
                        app:autoSizeTextType="uniform" />


                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/btnScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:scrollbars="none"
                    android:layout_below="@id/rev4"
                    android:layout_marginTop="11dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtleft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Left"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txtright"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Right"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txttop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Top"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txtbottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Bottom"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txtcentervertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Center Vertical"
                            android:textSize="20sp" />
                        <TextView
                            android:id="@+id/txtcenterhorizotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Center Horizontal"
                            android:textSize="20sp" />
                    </LinearLayout>

                </HorizontalScrollView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnScrollView"
                    android:layout_centerHorizontal="true"

                    android:text="Done" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>