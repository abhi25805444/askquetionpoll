<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerPickerScreeen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Picker Example"
            android:textColor="@color/blue"
            android:textSize="25sp"
            android:layout_marginTop="5dp"/>
        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/time1"></TimePicker>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display"
            android:id="@+id/btn_display"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:id="@+id/txt1"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dailog Time Picker Example"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:layout_marginTop="5dp"/>
        <com.google.android.material.button.MaterialButton
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Here for Choose Time"
            android:layout_gravity="left"
           style="@style/Widget.Material3.Button.TextButton"
            android:id="@+id/btn2"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dailog 24 hours  Time Picker Example"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:layout_marginTop="5dp"/>
        <com.google.android.material.button.MaterialButton
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Here for Choose Time"
            android:layout_gravity="left"
            style="@style/Widget.Material3.Button.TextButton"
            android:id="@+id/btn3"/>

    </LinearLayout>

</ScrollView>