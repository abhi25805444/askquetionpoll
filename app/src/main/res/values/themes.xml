<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.TimePicker.Display">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="timepickertheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSurface">#FEDAFF</item>
        <item name="colorOnSurface">#2196F3</item>
        <item name="android:colorBackground">@color/dark_green</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>


    <style name="ThemeOverlay.App.MaterialCalendar1" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">


        <item name="colorPrimary">#9EEF40</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorOnSurface">#800080</item>
        <item name="android:colorBackground">@color/red</item>
        <item name="colorSurface">@color/pink</item>
        <item name="colorOnBackground">#800080</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.AskQuestionPoll" parent="Theme.Material3.Light">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="SwitchTheme">
        <item name="colorControlActivated">#FF0000</item>
        <item name="colorSwitchThumbNormal">#FFFFFFFF</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent2" parent="ShapeAppearance.Material3.SmallComponent">

        <item name="cornerFamily">cut</item>

    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">

        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>


        <item name="cornerSize">50%</item>


    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">40dp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#FEDE00</item>
    </style>


    <style name="ThemeOverlay.App.MaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="colorPrimary">#FEDE00</item>
        <item name="colorOnPrimary">@color/red</item>
        <item name="colorOnSurface">#800080</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
        <item name="android:colorBackground">@color/red
        </item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/red</item>


    </style>

    <style name="ThemeOverlay.App.MaterialCalendar2" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="colorPrimary">#FEDE00</item>
        <item name="colorOnPrimary">@color/red</item>
        <item name="colorOnSurface">#800080</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent2</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
        <item name="android:colorBackground">@color/red
        </item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/red</item>


    </style>


    <style name="Theme.AskQuestionPoll" parent="Base.Theme.AskQuestionPoll" >
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheetshape</item>
    </style>

    <style name="Theme.AskQuestionPoll.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AskQuestionPoll.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AskQuestionPoll.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>