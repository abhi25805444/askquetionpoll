<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Solid color for the shape (you can make this transparent or any other color) -->
        <solid android:color="#00000000" />

        <!-- Corner radius for the rounded shape -->
        <corners android:radius="500dp" />

        <!-- Stroke width and color (optional) -->
        <stroke android:color="#FF000000" android:width="1dp" />

        <!-- Padding for the shape (optional) -->
        <padding
            android:left="1dp"
            android:right="1dp"
            android:top="1dp"
            android:bottom="1dp" />
    </shape>
</item>
</selector>